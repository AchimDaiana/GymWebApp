@using GymWebApp.Data.ViewModels
@model ReservationVM

@{
    ViewData["Title"] = "Create new reservation";
}

<h2 class="text-center">Adaugă o rezervare nouă</h2>
<br />
<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="@User.Identity.Name" class="form-control" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ParticipationHour" class="control-label"></label>
                        <input asp-for="ParticipationHour" type="time" class="form-control" />
                        <span asp-validation-for="ParticipationHour" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ParticipationDate" class="control-label"></label>
                        <input asp-for="ParticipationDate" type="date" class="form-control" />
                        <span asp-validation-for="ParticipationDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TrainingId" class="control-label"></label>
                        <select asp-for="TrainingId" class="form-control" asp-items="ViewBag.Trainings"></select>
                        <span asp-validation-for="TrainingId" class="text-danger"></span>
                    </div>
                </div>

</div>
                



            <div class="form-group">
                <input type="submit" value="Creează" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary float-right"><i class="bi bi-arrow-left-circle"></i>Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>



