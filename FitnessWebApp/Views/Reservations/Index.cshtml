@*Definim modelul*@
@using GymWebApp.Models
@model IEnumerable<Reservation>
@*Definim Viewul*@
@{
    ViewData["Title"] = "List of reservations";
}

@*Codul*@
<h1>Lista rezervarilor</h1>
<br/>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-clipboard2-plus"></i>Adaugă</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParticipationHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParticipationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Training.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParticipationHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParticipationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Training.Name)
                </td>
                <td>
                    <a class=" btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil "></i>Editează</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary float-right"><i class="bi bi-file-text"></i>Vizualizare detalii</a>

                </td>
            </tr>
        }
    </tbody>
</table>
