@using GymWebApp.Models
@model Subscription

@{
    ViewData["Title"] = "Delete subscription";
}

<h1>Șterge un abonament </h1>
<br />
<div class="row">
    <div class="col-md-8 offset-2">


        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Validity" class="control-label"></label>
            <input asp-for="Validity" class="form-control" />
            <span asp-validation-for="Validity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Picture" class="control-label"></label>
            <input asp-for="Picture" class="form-control" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>

        <div class="form-group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Șterge" class="btn btn-danger float-right" />
            </form>
            <a class="btn btn-primary" asp-action="Index"><i class="bi bi-arrow-left-circle"></i>Înapoi la listă</a>
        </div>

    </div>
    </div>




