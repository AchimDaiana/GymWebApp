@using GymWebApp.Models
@model Subscription

@{
    ViewData["Title"] = "Details of fitness subscription";
}

<h1 class="text-center">Detalii</h1>
<br />

<div class="container marginTop">
    <div>
        <div class="col-md 4">
            <div class="text-center view overlay hm-white-slight">

                <img src="@Model.Picture" class="img-fluid" alt="@Model.Name " width="300" height="300">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
        </div>
        <div class="col-md 8">
            <div class="card-block">
                <!--Title-->
                <h4 class="card-title">@Model.Name</h4>
                <!--Text-->
                <p class="card-text">@Model.Description.</p>
                <p class="card-text"><b>Valabilitate: </b>@Model.Validity</p>
                <p class="card-text"><b>Preț: </b>@Model.Price</p>

            </div>
        </div>

    </div>
</div>

<div class="float-right">
    <a asp-action="Index" class="btn btn-default">Înapoi la listă</a>
</div>
