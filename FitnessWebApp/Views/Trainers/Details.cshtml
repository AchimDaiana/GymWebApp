@using GymWebApp.Models
@model Trainer


@{
    ViewData["Title"] = "Details about trainer";
}

<h1>Detalii despre antrenorul @Model.FirstName</h1>
<br />
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" readonly />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" readonly />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Biography" class="control-label"></label>
            <textarea asp-for="Biography" class="form-control" readonly></textarea>
            <span asp-validation-for="Biography" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfilePicture" class="control-label"></label>
            <input asp-for="ProfilePicture" class="form-control" readonly />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id">Editează</a>
            <a class="float-right" asp-action="Index">Înapoi la listă</a>
        </div>

    </div>
</div>

