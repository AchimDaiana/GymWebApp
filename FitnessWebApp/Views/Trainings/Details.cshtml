@using GymWebApp.Models
@model Training

@{
    ViewData["Title"] = "Details about a training";
}

<h1 class="text-center">Detalii despre antrenamentul </h1>
<br />
@*<div class="col-md-6 offset-2">*@
        <img src="@Model.Picture" class="align-baseline" alt="@Model.Name" style="max-width: 400px">
        <div class="card-block">
            <h4 class="card-title">@Model.Name</h4>
            <br />
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><b>Ora începerii:</b>@Model.StartHour.ToString("HH:mm")</p>
            <p class="card-text"><b>Ora finalizării:</b>@Model.FinishHour.ToString("HH:mm")</p>
            <p class="card-text"><b>Categoria clasei:</b>@Model.Category.ToString()</p>
            <p class="card-text">
                <b>Antrenorul:</b>
                <a asp-controller="Trainers" asp-action="Details" asp-route-id="@Model.TrainerId">@Model.Trainer.FirstName</a>
            </p>
            <p class="card-text">
                <b>Abonament:</b>
                <a asp-controller="Subscriptions" asp-action="Details" asp-route-id="@Model.SubscriptionId">@Model.Subscription.Name</a>
            </p>


        </div>
   @* </div>*@

<div class="float-right">
    <a asp-action="Index">Înapoi la listă</a>
</div>

